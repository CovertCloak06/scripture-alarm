<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackgroundColor"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="?colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Personalization Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalization"
            android:textColor="?colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name (for greeting)"
            android:textColor="?textPrimaryColor"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:hint="e.g. Sarah"
            android:inputType="textPersonName"
            android:textColor="?textPrimaryColor"
            android:background="@drawable/spinner_background"
            android:padding="12dp" />

        <!-- Voice Settings Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?textSecondaryColor"
            android:alpha="0.3"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Settings"
            android:textColor="?colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice"
            android:textColor="?textPrimaryColor"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerVoice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_background"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speech Speed"
            android:textColor="?textPrimaryColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slow"
                android:textColor="?textSecondaryColor"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast"
                android:textColor="?textSecondaryColor"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textSpeedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1.0x"
            android:textColor="?colorPrimary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Pitch"
            android:textColor="?textPrimaryColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low"
                android:textColor="?textSecondaryColor"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBarPitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textColor="?textSecondaryColor"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textPitchValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1.0"
            android:textColor="?colorPrimary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestVoice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Test Voice"
            android:backgroundTint="@color/button_secondary"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            android:layout_marginBottom="24dp" />

        <!-- Theme Settings Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?textSecondaryColor"
            android:alpha="0.3"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textColor="?colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textColor="?textPrimaryColor"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroupTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioThemeSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System default"
                android:textColor="?textPrimaryColor" />

            <RadioButton
                android:id="@+id/radioThemeLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:textColor="?textPrimaryColor" />

            <RadioButton
                android:id="@+id/radioThemeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark"
                android:textColor="?textPrimaryColor" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color Scheme"
            android:textColor="?textPrimaryColor"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnColorPurple"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/color_circle_purple"
                android:contentDescription="Purple theme" />

            <ImageButton
                android:id="@+id/btnColorBlue"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/color_circle_blue"
                android:contentDescription="Blue theme" />

            <ImageButton
                android:id="@+id/btnColorGreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/color_circle_green"
                android:contentDescription="Green theme" />

            <ImageButton
                android:id="@+id/btnColorOrange"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/color_circle_orange"
                android:contentDescription="Orange theme" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Size"
            android:textColor="?textPrimaryColor"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupFontSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioFontSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small"
                android:textSize="12sp"
                android:textColor="?textPrimaryColor"
                android:layout_marginEnd="16dp" />

            <RadioButton
                android:id="@+id/radioFontMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textSize="16sp"
                android:textColor="?textPrimaryColor"
                android:layout_marginEnd="16dp" />

            <RadioButton
                android:id="@+id/radioFontLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:textSize="20sp"
                android:textColor="?textPrimaryColor" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Settings"
            android:backgroundTint="?colorPrimary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="28dp" />

    </LinearLayout>
</ScrollView>
