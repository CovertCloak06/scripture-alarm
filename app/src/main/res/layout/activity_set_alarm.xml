<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackgroundColor"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textSetAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm"
            android:textColor="?colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:timePickerMode="clock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSetAlarm" />

        <TextView
            android:id="@+id/textRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Repeat"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timePicker" />

        <LinearLayout
            android:id="@+id/layoutDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textRepeat">

            <ToggleButton
                android:id="@+id/btnSunday"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="@drawable/day_toggle_background"
                android:textColor="@color/day_toggle_text"
                android:textOff="S"
                android:textOn="S"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/btnMonday"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="@drawable/day_toggle_background"
                android:textColor="@color/day_toggle_text"
                android:textOff="M"
                android:textOn="M"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/btnTuesday"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="@drawable/day_toggle_background"
                android:textColor="@color/day_toggle_text"
                android:textOff="T"
                android:textOn="T"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/btnWednesday"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="@drawable/day_toggle_background"
                android:textColor="@color/day_toggle_text"
                android:textOff="W"
                android:textOn="W"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/btnThursday"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="@drawable/day_toggle_background"
                android:textColor="@color/day_toggle_text"
                android:textOff="T"
                android:textOn="T"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/btnFriday"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="@drawable/day_toggle_background"
                android:textColor="@color/day_toggle_text"
                android:textOff="F"
                android:textOn="F"
                android:textSize="14sp" />

            <ToggleButton
                android:id="@+id/btnSaturday"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="2dp"
                android:background="@drawable/day_toggle_background"
                android:textColor="@color/day_toggle_text"
                android:textOff="S"
                android:textOn="S"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Verse Category"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDays" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_background"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textCategory" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchSequential"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Read verses in order (instead of random)"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinnerCategory" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchSequential">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_secondary"
                android:text="Cancel"
                android:textColor="@android:color/white"
                app:cornerRadius="28dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="?colorPrimary"
                android:text="Save"
                android:textColor="@android:color/white"
                app:cornerRadius="28dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
